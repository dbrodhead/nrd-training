<h1>Listing training_days</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @training_days.each do |training_day| %>
      <tr>
        <td><%= training_day.date %></td>
        <td><%= training_day.details %></td>
        <td><%= link_to 'Show', training_day %></td>
        <td><%= link_to 'Edit', edit_training_day_path(training_day) %></td>
        <td><%= link_to 'Destroy', training_day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

